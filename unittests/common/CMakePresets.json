{
   "version": 7,
   "cmakeMinimumRequired": {
      "major": 3,
      "minor": 27,
      "patch": 0
   },
   "configurePresets": [
      {
         "name": "default",
         "displayName": "UnitTest Common",
         "description": "Unit test common communication functionality",
         "generator": "Unix Makefiles",
         "binaryDir": "${sourceDir}/build",
         "toolchainFile": "${sourceParentDir}/toolchain.cmake",
         "cacheVariables": {
            "YM_UT_COMMON_DEBUG": false,
            "YM_ProjRootDir": "${sourceParentDir}/..",
            "YM_ExtLibsDir": "${sourceParentDir}/../extlibs",
            "YM_UnitTestDir": "${sourceParentDir}",
            "YM_CustomLibsDir": "${sourceParentDir}/customlibs"
         }
      }
   ]
}
